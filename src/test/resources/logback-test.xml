<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <Property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSSZ}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>